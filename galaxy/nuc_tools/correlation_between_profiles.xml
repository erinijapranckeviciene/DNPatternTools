<tool id="correlation_between_profiles" name="Correlation between forward and complementary frequency profiles to find nucleosome position" version="0.1.0">
    <requirements>
    </requirements>
    <command detect_errors="exit_code" interpreter="sh"><![CDATA[
            correlation_between_profiles.sh "$input1" "$window" "$dinucleotides" "$output1"
    ]]></command>
    <inputs>
        <param type="data" name="input1" format="tabular" label="Select dinucleotide  profiles from"/>
        <param name="window" type="integer" value="146" label="Size of sliding window" />
        <param name="dinucleotides" type="text" value="AA AC AG AT CA CC CG CT GA GC GG GT TA TC TG TT" label="Dinucleotides" />
    </inputs>
    <outputs>
        <data name="output1" format="tabular" />
    </outputs>
    <help><![CDATA[
        TODO: Fill in help.
    ]]></help>
</tool>
