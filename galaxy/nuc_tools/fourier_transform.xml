<tool id="fourier_transform" name="Fourier Transform of the  profile" version="0.1.0">
    <requirements>
    </requirements>
    <command detect_errors="exit_code" interpreter="sh"><![CDATA[
            fourier_transform.sh "$input" "$output" "$normalization" "$smoothing" "$trim"
    ]]></command>
    <inputs>
      <param type="data" name="input" format="tabular" label="Dinucleotide frequencies(no smooth)"/>
      <param name="normalization" type="integer" value="2" label="Normalization" />
      <param name="smoothing" type="integer" value="3" label="Smoothing window" />
      <param name="trim" type="integer" value="4" label="Trim signal" />

    </inputs>
    <outputs>
        <data name="output" format="tabular" />
    </outputs>
    <help><![CDATA[
    TODO: Fill in help.
    ---------------------------
    Output type :
    1 normalization
    2 smoothing
    3 Fourier transform
    ---------------------------
    Normalization:
    0 basic normalization
    1 linear normalization
    2 quadratic normalization
    --------------------------
    ]]></help>
</tool>
