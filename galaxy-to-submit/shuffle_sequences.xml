<tool id="shuffle_sequences" name="Shuffle fasta sequences" version="0.1.0">
  <command detect_errors="exit_code" interpreter="sh"><![CDATA[
          shuffle_sequences.sh "$input1" "$subset" "$output1"
    ]]></command> 
    <inputs>
      <param type="data" name="input1" format="fasta" label="From fasta"/>
      <param name="subset" type="integer" value="2" label="n-mer size to preserve frequency"/>
    </inputs>
    <outputs>
        <data name="output1" format="fasta" />
    </outputs>
    <help><![CDATA[
        TODO: Fill in help.
    ]]></help>
</tool>
